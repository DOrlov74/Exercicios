@model Game_reg_1x1.Models.Player

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Player</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Name
        </dt>
        <dd class = "col-sm-10">
            @Model.Name
        </dd>
        <dt class = "col-sm-2">
            Rating
        </dt>
        <dd class = "col-sm-10">
            @Model.Rating
        </dd>
        <dt class = "col-sm-2">
            Victories
        </dt>
        <dd class = "col-sm-10">
            @Model.Victories
        </dd>
        <dt class = "col-sm-2">
            Fails
        </dt>
        <dd class = "col-sm-10">
            @Model.Fails
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
