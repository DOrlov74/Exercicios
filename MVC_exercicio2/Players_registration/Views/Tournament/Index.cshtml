@{
}
@model IEnumerable<Players_registration.ViewModels.TournamentTeam>
    <h2>Tournaments table</h2>
<table class="players-table table table-striped .table-hover">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Type</th>
            <th>Rating</th>
            <th>Votes</th>
            <th>Team</th>
        </tr>
    </thead>
    <tbody>
    
    @foreach (var p in Model)
    {
        <tr>
            <td>@p.Tournament.Id</td>
            <td>@p.Tournament.Name</td>
            <td>@p.Tournament.Type</td>
            <td>@p.Tournament.Rating</td>
            <td>@p.Tournament.Votes</td>
            <td>@p.Team.Name</td>
        </tr>
    }
    </tbody>
</table>